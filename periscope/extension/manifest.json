{
	"manifest_version": 2,
	"name": "Periscope",
	"description": "Fetches current tab url.",
	"version": "0.1",
	"author": "Brian Nduhiu",
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Periscope"
	},
	"permissions": ["tabs", "activeTab", "http://127.0.0.1:5000/*", "storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}
}
